<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".ui.fragments.BreathingExercisesFragment">

    <!-- Header Section -->
    <LinearLayout
        android:id="@+id/header_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/breathing_header_background"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🌬️ Breathing Exercises"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/colorOnBackground"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stress Relief &amp; Wellness"
            android:textSize="16sp"
            android:textColor="@color/colorOnBackground"
            android:alpha="0.8"
            android:layout_marginBottom="16dp" />

        <!-- Quick Stats -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/text_weekly_minutes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Weekly Minutes"
                    android:textSize="12sp"
                    android:textColor="@color/colorOnBackground"
                    android:alpha="0.7" />

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:background="@color/colorPrimary"
                android:alpha="0.3" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/text_streak_days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Day Streak"
                    android:textSize="12sp"
                    android:textColor="@color/colorOnBackground"
                    android:alpha="0.7" />

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:background="@color/colorPrimary"
                android:alpha="0.3" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/text_total_sessions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Sessions"
                    android:textSize="12sp"
                    android:textColor="@color/colorOnBackground"
                    android:alpha="0.7" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Breathing Techniques Section -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/header_section"
        app:layout_constraintBottom_toTopOf="@id/quick_start_section">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose Your Technique"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/colorOnBackground"
                android:layout_marginBottom="16dp" />

            <!-- Breathing Exercise Cards -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_breathing_exercises"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/item_breathing_exercise" />

        </LinearLayout>

    </ScrollView>

    <!-- Quick Start Section -->
    <LinearLayout
        android:id="@+id/quick_start_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/quick_start_background"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quick Start"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/colorOnBackground"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <Button
                android:id="@+id/btn_quick_478"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="4-7-8 (3 min)"
                android:textSize="14sp"
                android:background="@drawable/button_breathing_primary"
                android:textColor="@color/colorOnPrimary" />

            <Button
                android:id="@+id/btn_quick_box"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Box (5 min)"
                android:textSize="14sp"
                android:background="@drawable/button_breathing_secondary"
                android:textColor="@color/colorOnSecondary" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_emergency_breathing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🚨 Emergency Calm (2 min)"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/button_emergency_background"
            android:textColor="@android:color/white" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
