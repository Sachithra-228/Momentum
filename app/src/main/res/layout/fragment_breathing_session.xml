<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".ui.fragments.BreathingSessionFragment">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/button_back_circular"
            android:text="←"
            android:textSize="18sp"
            android:textColor="@color/colorOnBackground"
            android:layout_marginEnd="16dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_exercise_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4-7-8 Breathing"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/colorOnBackground" />

            <TextView
                android:id="@+id/text_exercise_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calming technique for anxiety relief"
                android:textSize="14sp"
                android:textColor="@color/colorOnBackground"
                android:alpha="0.7" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_settings"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/button_settings_circular"
            android:text="⚙️"
            android:textSize="16sp" />

    </LinearLayout>

    <!-- Breathing Circle -->
    <FrameLayout
        android:id="@+id/breathing_circle_container"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/header_section"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Outer Circle -->
        <View
            android:id="@+id/outer_circle"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:background="@drawable/breathing_circle_outer"
            android:layout_gravity="center" />

        <!-- Inner Circle -->
        <View
            android:id="@+id/inner_circle"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/breathing_circle_inner"
            android:layout_gravity="center" />

        <!-- Center Text -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/text_breathing_phase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Breathe In"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/colorOnBackground"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/text_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textSize="48sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary" />

        </LinearLayout>

    </FrameLayout>

    <!-- Progress and Controls -->
    <LinearLayout
        android:id="@+id/controls_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/breathing_circle_container"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Session Progress -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/text_cycles_completed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cycles"
                    android:textSize="12sp"
                    android:textColor="@color/colorOnBackground"
                    android:alpha="0.7" />

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:background="@color/colorPrimary"
                android:alpha="0.3" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/text_session_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0:00"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time"
                    android:textSize="12sp"
                    android:textColor="@color/colorOnBackground"
                    android:alpha="0.7" />

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:background="@color/colorPrimary"
                android:alpha="0.3" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/text_target_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5:00"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorOnBackground"
                    android:alpha="0.7" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Target"
                    android:textSize="12sp"
                    android:textColor="@color/colorOnBackground"
                    android:alpha="0.7" />

            </LinearLayout>

        </LinearLayout>

        <!-- Control Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btn_pause_resume"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:text="Pause"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/button_pause_background"
                android:textColor="@android:color/white"
                android:layout_marginEnd="16dp" />

            <Button
                android:id="@+id/btn_stop"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:text="Stop"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/button_stop_background"
                android:textColor="@android:color/white" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
