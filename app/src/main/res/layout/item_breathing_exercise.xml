<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/colorSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Exercise Icon -->
        <TextView
            android:id="@+id/text_exercise_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="🌬️"
            android:textSize="24sp"
            android:gravity="center"
            android:background="@drawable/exercise_icon_background"
            android:layout_marginEnd="16dp" />

        <!-- Exercise Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_exercise_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4-7-8 Breathing"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/colorOnSurface"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/text_exercise_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calming technique for anxiety relief"
                android:textSize="14sp"
                android:textColor="@color/colorOnSurface"
                android:alpha="0.7"
                android:layout_marginBottom="8dp" />

            <!-- Benefits Tags -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_benefit_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reduces anxiety"
                    android:textSize="12sp"
                    android:textColor="@color/colorPrimary"
                    android:background="@drawable/benefit_tag_background"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:layout_marginEnd="6dp" />

                <TextView
                    android:id="@+id/text_benefit_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Better sleep"
                    android:textSize="12sp"
                    android:textColor="@color/colorPrimary"
                    android:background="@drawable/benefit_tag_background"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Difficulty and Action -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Difficulty Badge -->
            <TextView
                android:id="@+id/text_difficulty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BEGINNER"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/difficulty_beginner_background"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_marginBottom="8dp" />

            <!-- Start Button -->
            <Button
                android:id="@+id/btn_start_exercise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@drawable/button_start_exercise"
                android:textColor="@android:color/white"
                android:minWidth="80dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
